<?xml version="1.0" encoding="utf-8"?>

<!-- Add activity layout. -->

<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center|fill_vertical"
    android:columnCount="2" >

    <!-- Label for the parcel name. -->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:text="@string/label_parcel_name" />

    <!-- Parcel name. TODO Correct the line extension for too long strings (maxlength do weird things...)-->

    <EditText
        android:id="@+id/tf_parcel_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="fill_horizontal"
        android:inputType="text" >
    </EditText>

    <!-- Label for the parcel growing. -->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:text="@string/label_parcel_actual_culture" />

    <!-- Parcel growing. -->

    <Spinner
        android:id="@+id/sp_parcel_actual_culture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:entries="@array/array_cultures_types" />

    <!-- Label for the previous parcel growing. -->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:text="@string/label_parcel_previous_culture" />

    <!-- Parcel previous growing. -->

    <Spinner
        android:id="@+id/sp_parcel_previous_culture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:entries="@array/array_cultures_types" />

    <!-- Label for the previous parcel surface. -->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:text="@string/label_parcel_surface" />

    <!-- Parcel surface. -->

    <NumberPicker
        android:id="@+id/np_parcel_surface"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal" />

    <!-- Add parcel button. -->

    <Button
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_columnSpan="2"
        android:layout_gravity="center_horizontal"
        android:drawableLeft="@drawable/ic_action_camera"
        android:text="@string/btn_take_picture" />

    <Button
        android:id="@+id/btn_add_parcel"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_columnSpan="2"
        android:layout_gravity="center_horizontal"
        android:text="@string/btn_label_add_parcel" />

</GridLayout>